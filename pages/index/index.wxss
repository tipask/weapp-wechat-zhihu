/**index.wxss**/

.container {
  height: 1500rpx;
}

.container .search {
  width: 735rpx;
  height: 65rpx;
  padding: 10rpx 30rpx 10rpx 30rpx;
  background: #fff;
}

.container .search-left {
  background: #e9e9e9;
  border-radius: 6rpx;
  width: calc(100% - 200rpx);
  text-align: left;
}

.container .search-left input {
  display: inline-block;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 26rpx;
  width: calc(100% - 400rpx);
  display:inline-block;
  vertical-align:middle;
}

.search-placeholder {
  color: #888;
  line-height: 20rpx;
}

.container .search .search-left image {
  display:inline-block;
  width:35rpx;
  height:35rpx;
  padding:15rpx 15rpx 15rpx 10px;
  vertical-align:middle;
}

.container .search .search-right {
  flex: 1;
}

.container .search .search-right image {
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container {
  padding: 0;
  font-size: 14rpx;
  background: #f0f4f3;
  color: #000;
}

